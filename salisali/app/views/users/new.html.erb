<%= form_for @user, url: users_path do |f| %>

    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :mail %>
    <%= f.text_field :mail %>
    </p>
    <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
    </p>
    <p>
    <%= f.label :area_master_id %>
    <%= f.text_field :area_master_id %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.text_field :password %>
    </p>
    <p>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
    </p>
    <p>
    <%= f.submit '登録' %>
    </p>
    <% end %>