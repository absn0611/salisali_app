<%= form_for :session, url: login_path do |f| %>
    <div class="error">
        <%= h(flash[:notice]) %><br>
    </div>

    <p>
    <%= f.label :mail %>
    <%= f.text_field :mail %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.submit 'ログイン' %>
    </p>
    <% end %>