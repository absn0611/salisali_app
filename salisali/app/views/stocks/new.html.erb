<h1>商品一覧</h1>
<%= form_with(model: @order, local: true, url: stocks_path ) do |f| %>

    <table>
    <tr>
        <th>商品名</th>
        <th>価格(peso)</th>
        <th>説明</th>
        <th>注文個数</th>
    </tr>
  <tr>

  <% @stocks.each do |stock| %>

    <td><%= stock.goods_master.goods_name %></td>
    <td><%= stock.goods_master.price %></td>
    <td><%= stock.goods_master.about %></td>
    <td　hidden><%＃＃=f.hidden_field :user_id, value: @current_user.id %></td>
    <td><%=f.number_field :"#{stock.goods_master_id}", value:0 %></td>
  </tr>
  <% end %>
  
</table>

<td><%=f.submit %></td>

  <% end %>
